<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#1c62ca31"
android:orientation="vertical"
tools:context="com.example.xie.moneymanager.checkaccounting">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/img_back"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_action_name"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="查看收支情况"
                android:layout_weight="7"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <ImageButton
                android:id="@+id/imgbtn_refresh"
                android:alpha="0.6"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_refresh"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#7f363636"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#dcd7c1"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text="开始日期:"/>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#dcd7c1">
                    <TextView
                        android:id="@+id/tv_beginDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio1"
                        android:gravity="center_vertical"
                        android:paddingLeft="8dp"
                        android:layout_margin="4dp"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </FrameLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#c7dae1"
                    android:gravity="center"
                    android:text="结束日期:"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#c7dae1">
                    <TextView
                        android:id="@+id/tv_endDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/radio2"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:paddingLeft="8dp"
                        android:layout_margin="4dp"
                        android:textSize="16sp" />
                </FrameLayout>

            </LinearLayout>
            <TabHost
                android:id="@+id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="9">
                        <LinearLayout
                            android:id="@+id/lv_tab_inout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <com.github.mikephil.charting.charts.PieChart
                                android:id="@+id/inout_piegraph"
                                android:layout_width="match_parent"
                                android:layout_margin="10dp"
                                android:layout_height="0dp"
                                android:layout_weight="8"
                                android:layout_gravity="center_horizontal">
                            </com.github.mikephil.charting.charts.PieChart>
                        </LinearLayout>
                        <ScrollView
                            android:id="@+id/lv_tab_inoutdetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/out_detailbar"
                                    android:layout_width="match_parent"
                                    android:layout_margin="10dp"
                                    android:layout_height="360dp"
                                    android:layout_gravity="center_horizontal"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:gravity="center"
                                    android:layout_marginTop="8dp"
                                    android:text="支出情况(元)"/>
                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/in_detailbar"
                                    android:layout_marginTop="30dp"
                                    android:layout_width="match_parent"
                                    android:layout_margin="10dp"
                                    android:layout_height="360dp"
                                    android:layout_gravity="center_horizontal"/>
                                <TextView
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="20sp"
                                    android:layout_margin="10dp"
                                    android:text="收入情况(元)"/>
                            </LinearLayout>
                        </ScrollView>
                        <LinearLayout
                            android:id="@+id/lv_tab_way"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <com.github.mikephil.charting.charts.LineChart
                                android:id="@+id/line_chart"
                                android:layout_width="match_parent"
                                android:layout_height="400dp"
                                android:layout_gravity="center_horizontal"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:paddingRight="20dp"
                                android:text="资金详情(元)"/>
                        </LinearLayout>
                    </FrameLayout>

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:background="#e8ffb3">
                    </TabWidget>
                </LinearLayout>
            </TabHost>
        </LinearLayout>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
